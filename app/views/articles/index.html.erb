<h1><center>Gruppträning</center></h1>

  <div id="container">
  <div class="row">
        

        <div class="row">

        <%= if logged_in? %>
        <div class="col-md-4"><p><%= link_to new_article_path, :class => "btn btn-danger btn-lg" do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"> Aktivitet</span>
          <% end %> </p></div><div class="col-md-4"></div><!-- end of col-md4 -->
          <% else %>


         <div class="col-md-4"> <%= link_to "Vecka", new_article_path, :class => "btn btn-primary " %>
          <%= link_to "Månad", new_article_path, :class => "btn btn-primary " %>
          <%= link_to "Dag", new_article_path, :class => "btn btn-primary " %></div>
          </div>
       

                  <div id="articles">
                    <h2 id="month">
                      <%= link_to "<", date: @date.prev_month %>
                      <%= @date.strftime("%B %Y") %>
                      <%= link_to ">", date: @date.next_month %>
                    </h2>
                    <%= calendar @date do |date| %>
                      <%= date.day %>
                      <% if @articles_by_date[date] %>
                        <ul>
                          <% @articles_by_date[date].each do |article| %>
                            <li><%= link_to article.name, article %></li>
                          <% end %>
                        </ul>
                      <% end %>
                    <% end %>
                  </div>

<% end %>
  </div>
  </div>